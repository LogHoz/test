<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/prefs_cat_sound">
                           
        <ListPreference
                android:key="soundMode"
                android:title="@string/prefs_sound"
                android:summary="@string/prefs_sound_summary"
                android:entries="@array/prefs_sound_entries"
                android:entryValues="@array/prefs_sound_values"
                android:dialogTitle="@string/prefs_sound_title"
                android:defaultValue="FULL" />
                        
        <CheckBoxPreference
                android:key="wifiPing"
                android:title="@string/prefs_ping"
                android:summary="@string/prefs_ping_summary"
                android:defaultValue="false" />
            
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/prefs_cat_display">
                           
        <ListPreference
                android:key="orientationMode"
                android:title="@string/prefs_orient"
                android:summary="@string/prefs_orient_summary"
                android:entries="@array/prefs_orient_entries"
                android:entryValues="@array/prefs_orient_values"
                android:dialogTitle="@string/prefs_orient_title"
                android:defaultValue="1" />
            
    </PreferenceCategory>
  
    <PreferenceCategory android:title="@string/prefs_cat_data">
                        
        <CheckBoxPreference
                android:key="fakeMissingData"
                android:title="@string/prefs_fake"
                android:summary="@string/prefs_fake_summary"
                android:defaultValue="false" />
            
    </PreferenceCategory>
     
    <PreferenceCategory android:title="@string/prefs_cat_audio">

        <ListPreference
                android:key="sampleRate"
                android:title="@string/prefs_sample"
                android:summary="@string/prefs_sample_summary"
                android:entries="@array/prefs_sample_entries"
                android:entryValues="@array/prefs_sample_values"
                android:dialogTitle="@string/prefs_sample_title"
                android:defaultValue="8000" />

        <ListPreference
                android:key="decimateRate"
                android:title="@string/prefs_decimate"
                android:summary="@string/prefs_decimate_summary"
                android:entries="@array/prefs_decimate_entries"
                android:entryValues="@array/prefs_decimate_values"
                android:dialogTitle="@string/prefs_decimate_title"
                android:defaultValue="2" />

        <ListPreference
                android:key="averageLen"
                android:title="@string/prefs_average"
                android:summary="@string/prefs_average_summary"
                android:entries="@array/prefs_average_entries"
                android:entryValues="@array/prefs_average_values"
                android:dialogTitle="@string/prefs_average_title"
                android:defaultValue="4" />

    </PreferenceCategory>
     
</PreferenceScreen>

