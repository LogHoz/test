<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.hermit.onwatch" android:versionName="1.0"
	android:versionCode="1">
	
	<application android:label="@string/app_name"
		android:description="@string/description" android:debuggable="true" android:icon="@drawable/android">

        <provider android:name=".provider.PassageProvider"
            android:authorities="org.hermit.provider.PassageData" />

		<activity android:name=".OnWatch" android:label="@string/app_name"
			android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:launchMode="singleTop" android:name="CrewEditor"
			android:label="@string/crew_edit_title">
		</activity>
		
        <!-- Passage editor activity. -->
		<activity android:name="PassageEditor"
					android:launchMode="singleTop"
            		android:configChanges="keyboardHidden|orientation"
					android:label="@string/passage_edit_title" >
					
            <!-- View or edit the data of a single passage. -->
            <intent-filter android:label="@string/passage_edit_title">
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />
                <action android:name="com.android.notepad.action.EDIT_NOTE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/vnd.org.hermit.passage.passage" />
            </intent-filter>

            <!-- Create a new note inside of a directory of passages. -->
            <intent-filter android:label="@string/passage_new_title">
                <action android:name="android.intent.action.INSERT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.dir/vnd.org.hermit.passage.passage" />
            </intent-filter>

		</activity>

		<activity android:name="org.hermit.android.widgets.TimeZoneActivity"
			android:label="@string/title_timezone" android:launchMode="singleTop">
		</activity>

		<activity android:name="org.hermit.android.core.SplashActivity">
		</activity>

		<activity android:name=".Preferences"
				  android:label="@string/prefs_title"
				  android:configChanges="mcc|mnc|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout"
				  android:launchMode="singleTop">
		</activity>

		<activity android:name=".Help"
				  android:launchMode="singleTop"
				  android:configChanges="mcc|mnc|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout"
				  android:label="@string/help_title">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"></action>
			</intent-filter>
		</activity>

	</application>
	
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.WRITE_SETTINGS"/>
	<uses-permission android:name="android.permission.SET_TIME_ZONE"/>
	
	<uses-sdk android:minSdkVersion="11"/>

    <supports-screens
            android:smallScreens="false"
            android:resizeable="true"
            android:normalScreens="true"
            android:anyDensity="true" android:largeScreens="true" android:xlargeScreens="true"/>
            
</manifest> 

