<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    
	<include
			layout="@layout/clock_view"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
     
	<include
			layout="@layout/location_view"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
            android:layout_weight="1" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >

		<ImageButton
			android:id="@+id/flip_left"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/btn_thin"
			android:src="@drawable/ic_left" />

		<org.hermit.onwatch.ChimeButton
			android:id="@+id/home_chime_button" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1"
			android:background="@drawable/btn_thin" />

		<org.hermit.onwatch.AlertButton
			android:id="@+id/home_alert_button" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1"
			android:background="@drawable/btn_thin" />

		<ImageButton
			android:id="@+id/flip_right"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/btn_thin"
			android:src="@drawable/ic_right" />

	</LinearLayout>

</LinearLayout>

