<?xml version="1.0" encoding="utf-8"?>

<resources>
  
    <style name="ThinButton">
        <item name="android:background">@drawable/btn_thin</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ClockDateline">
        <item name="android:textSize">24dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ClockTime">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">34dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ClockWatch">
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LocationStatus">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22dp</item>
        <item name="android:singleLine">true</item>
    </style>
 
    <style name="LatLongText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">42dp</item>
        <item name="android:singleLine">true</item>
    </style>
 
    <style name="LocationAuxText">
        <item name="android:textSize">24dp</item>
        <item name="android:singleLine">true</item>
    </style>
    
</resources>

