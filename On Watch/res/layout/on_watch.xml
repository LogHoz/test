<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_view"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >

	<ViewAnimator
		android:id="@+id/main_view_flipper"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" >

		<include
			layout="@layout/home_view"
    		android:id="@+id/home_view"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />

		<include
			layout="@layout/passage_view"
    		android:id="@+id/passage_view"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />

		<include
			layout="@layout/schedule_view"
    		android:id="@+id/schedule_view"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />

		<include
			layout="@layout/astro_view"
    		android:id="@+id/astro_view"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />

	</ViewAnimator>

</LinearLayout>

