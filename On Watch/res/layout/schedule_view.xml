<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical">

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent"
        android:layout_weight="1" >

		<org.hermit.onwatch.ScheduleWidget
			android:id="@+id/sched_table" android:layout_width="fill_parent"
			android:layout_height="fill_parent" />

	</ScrollView>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<ImageButton android:id="@+id/flip_left"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/btn_thin" android:src="@drawable/ic_left" />

		<Button android:id="@+id/sched_edit_button"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="1" android:background="@drawable/btn_thin"
			android:text="@string/lab_edit" android:textColor="#ffffff"
			android:textSize="24dip" />

		<ImageButton android:id="@+id/flip_right"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/btn_thin" android:src="@drawable/ic_right" />

	</LinearLayout>

</LinearLayout>

