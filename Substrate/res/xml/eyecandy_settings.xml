<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/eyecandy_settings" >

    <ListPreference
            android:key="bgColour"
            android:title="@string/eyecandy_prefs_bg"
            android:summary="@string/eyecandy_prefs_bg_summary"
            android:entries="@array/eyecandy_prefs_bg_entries"
            android:entryValues="@array/eyecandy_prefs_bg_values"
            android:dialogTitle="@string/eyecandy_prefs_bg_title"
            android:defaultValue="2000" />

    <ListPreference
            android:key="colourPalette"
            android:title="@string/eyecandy_prefs_palette"
            android:summary="@string/eyecandy_prefs_palette_summary"
            android:entries="@array/eyecandy_prefs_palette_entries"
            android:entryValues="@array/eyecandy_prefs_palette_values"
            android:dialogTitle="@string/eyecandy_prefs_palette_title"
            android:defaultValue="-1" />

    <ListPreference
            android:key="animSpeed"
            android:title="@string/eyecandy_prefs_speed"
            android:summary="@string/eyecandy_prefs_speed_summary"
            android:entries="@array/eyecandy_prefs_speed_entries"
            android:entryValues="@array/eyecandy_prefs_speed_values"
            android:dialogTitle="@string/eyecandy_prefs_speed_title"
            android:defaultValue="1" />

    <ListPreference
            android:key="cyclesSel"
            android:title="@string/eyecandy_prefs_cycles"
            android:summary="@string/eyecandy_prefs_cycles_summary"
            android:entries="@array/eyecandy_prefs_cycles_entries"
            android:entryValues="@array/eyecandy_prefs_cycles_values"
            android:dialogTitle="@string/eyecandy_prefs_cycles_title"
            android:defaultValue="2" />

</PreferenceScreen>

